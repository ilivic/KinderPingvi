<Page x:Class="KinderPingui.PagesApp.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinderPingui.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Добавить продукцию" Click="ClickAddNewItemOrService"/>
            <Button Content="Просмотреть номенклатуру" Click="ClickShowItemsAndservice"/>
            <Button Content="Информация" Click="ClickAnotherInfomation"/>
            <Button Content="Сообщить об ошибке" Click="ClickMessageFoMe"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Frame x:Name="MainNavigationFrame" NavigationUIVisibility="Hidden"  Width="587" Height="438"/>
        </StackPanel>
    </Grid>
</Page>
